{% extends 'opanel/login_layout.twig' %}

{% block content %}
<div class="page page-center">
  <div class="container container-tight py-4">
    <div class="text-center mb-4">
      <a href="/" class="navbar-brand">
        <img src="/assets/img/logo-v7-nobg.png" height="48" alt="Logo">
      </a>
      <h2 class="h3 mt-3">請登入後台</h2>
      <p class="text-muted">輸入帳號密碼以進入管理後台</p>
    </div>

    <form class="card card-md shadow-sm rounded-xl" method="post" action="/opanel/login">
      <div class="card-body">
        <div class="mb-3">
          <label class="form-label">帳號</label>
          <input type="text" name="account" class="form-control" placeholder="請輸入帳號" required>
        </div>
        <div class="mb-2">
          <label class="form-label">密碼</label>
          <input type="password" name="password" class="form-control" placeholder="請輸入密碼" required>
        </div>
        <div class="form-footer">
          <button type="submit" class="btn btn-primary w-100">登入</button>
        </div>
      </div>
    </form>

    <div class="text-center text-muted mt-3 small">
      <a href="/">← 回前台首頁</a>
      {# <span class="mx-2">|</span> <a href="#">忘記密碼？</a> #}
    </div>
  </div>
</div>
{% endblock %}
